{% extends 'layouts/tasks.lay.twig' %}

{% block title %}Editar Tarefa{% endblock %} 

{% block main %}

	<!-- add tasks -->
	<div id="addTask">
		<div class="container">
				<form action="{{base_url}}/tasks/update" method="post">
					<input type="hidden" name="task_id" value="{{task.task_id}}">
					<div class="form-group col-md-4">
						<label>Tarefa</label>
						<input type="text" name="task_name" value="{{task.task_name}}" class="form-control">
					</div>

					<div class="form-group col-md-4">
						<label>Usuário</label>
						<input type="tex" name="user_name" value="{{task.user_name}}" class="form-control">
					</div>

					<div class="form-group col-md-4">
						<label>Link do Repositório/Download</label>
						<input type="text" name="task_link" value="{{task.task_link}}" class="form-control">
					</div>

					<div class="form-group col-md-4">
						<label>Projeto</label>
						<select name="project_id"  class="form-control">
							<option value="{{task.project_id}}">{{task.project_name}}</option>

							{% for project in projects %}
								<option value="{{project.project_id}}"> {{project.project_name}}</option>
							{% endfor %}
						</select>
					</div>

					<div class="form-group col-md-12">
						<label>Descrição</label>
						<textarea resizeble="false" name="task_desc" id="task_desc" class="form-control" rows="20">
							{{task.task_desc}}
						</textarea>
					</div>

					<div class="col-md-4">
						<button type="submit" class="btn btn-primary btn-block"> Atualizar</button>
					</div>
				</form>
			</div>
	</div>
	<!-- add tasks	-->

{% endblock %}

{% block scripts %}
    <script src="//cdn.ckeditor.com/4.6.1/full/ckeditor.js"></script>
    <script>
    	 CKEDITOR.replace( 'task_desc' );
    </script>
{% endblock %}